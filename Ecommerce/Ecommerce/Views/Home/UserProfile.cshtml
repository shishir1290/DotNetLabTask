@model Ecommerce.EF.User

@{
    ViewBag.Title = "UserProfile";
}

<h2 align="center">Customer Profile</h2>

<div class="profile-container">
    <div class="profile-section">
        <div class="profile-label">Name:</div>
        <div class="profile-value">@Html.DisplayFor(model => model.Name)</div>
    </div>
    <div class="profile-section">
        <div class="profile-label">Email:</div>
        <div class="profile-value">@Html.DisplayFor(model => model.Email)</div>
    </div>
    <div class="profile-section">
        <div class="profile-label">Phone:</div>
        <div class="profile-value">@Html.DisplayFor(model => model.Phone)</div>
    </div>
    <div class="profile-section">
        <div class="profile-label">Address:</div>
        <div class="profile-value">@Html.DisplayFor(model => model.Address)</div>
    </div>
    <div class="profile-section">
        <div class="profile-label">Gender:</div>
        <div class="profile-value">@Html.DisplayFor(model => model.Gender)</div>
    </div>
</div>

<style>
    .profile-container {
        background-color: #f9f9f9;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        margin: 0 auto;
    }

    .profile-section {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .profile-label {
        font-weight: bold;
        flex: 1;
    }

    .profile-value {
        flex: 2;
    }
</style>
