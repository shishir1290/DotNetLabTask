@model List<string>
@using Ecommerce.EF;

@{
    ViewBag.Title = "Cart";
}

<h2>Shopping Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string[] cartItemParts = item.Split('|');
                if (cartItemParts.Length >= 1)
                {
                    if (int.TryParse(cartItemParts[0], out int productId))
                    {
                        var db = new ProductEntities3();
                        var product = db.Products.FirstOrDefault(p => p.id == productId);

                        if (product != null && cartItemParts.Length >= 3) // Ensure you have a valid product and all required cart item parts
                        {
                            <tr>
                                <td width="30%">
                                    @if (product.ProductImage != null && product.ProductImage.Length > 0)
                                    {
                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(product.ProductImage)" width="50%" height="50%" />
                                    }
                                    else
                                    {
                                        <p>No image available</p>
                                    }
                                </td>
                                <td>@product.ProductName</td>
                                <td>@cartItemParts[2]</td>
                                <td>
                                    @Html.ActionLink("Delete", "DeleteCartItem", "Home", new { id = cartItemParts[0] }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                        else
                        {
                            <p>Invalid product or cart item format</p>
                        }
                    }
                    else
                    {
                        <p>Invalid product ID format: @cartItemParts[0]</p>
                    }
                }
                else
                {
                    <p>Invalid cart item format</p>
                }
            }

        </tbody>
    </table>

    @Html.ActionLink("Order All", "OrderAll", "Home", null, new { @class = "btn btn-primary" })
}

@Html.ActionLink("Continue Shopping", "CustomerHome", "Home")
