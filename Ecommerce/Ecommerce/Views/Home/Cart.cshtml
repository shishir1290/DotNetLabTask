@model List<string>

@{
    ViewBag.Title = "Cart";
}

<h2>Shopping Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Action</th> <!-- New column for the "Delete" button -->
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string[] cartItemParts = item.Split('|');
                if (cartItemParts.Length >= 3) // Ensure you have product ID, name, and price
                {
                    <tr>
                        <td>@cartItemParts[1]</td>
                        <td>@cartItemParts[2]</td>
                        <td>
                            @Html.ActionLink("Delete", "DeleteCartItem", new { id = cartItemParts[0] }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    @Html.ActionLink("Order All", "OrderAll", "Home", null, new { @class = "btn btn-primary" })
}

@Html.ActionLink("Continue Shopping", "Index", "Home")
