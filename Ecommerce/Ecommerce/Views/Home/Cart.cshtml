@model List<string>

@{
    ViewBag.Title = "Cart";
}

<h2>Shopping Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Action</th> <!-- New column for the "Delete" button -->
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                string[] cartItemParts = Model[i].Split('|');
                if (cartItemParts.Length >= 2)
                {
                    <tr>
                        <td>@cartItemParts[0]</td>
                        <td>@cartItemParts[1]</td>
                        <td>
                            @Html.ActionLink("Delete", "DeleteCartItem", "Home", new { index = i }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    @Html.ActionLink("Clear Cart", "ClearCart", "Home", null, new { @class = "btn btn-primary" })
}

@Html.ActionLink("Continue Shopping", "Index", "Home")
