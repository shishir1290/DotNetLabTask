@model List<string>

@{
    ViewBag.Title = "Cart";
}

<h2>Shopping Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                string[] cartItemParts = item.Split('|');
                if (cartItemParts.Length >= 3) // Ensure you have product ID, name, and price
                {
                    <tr>
                        <td width="15%">
                            @if (cartItemParts.Length >= 4 && !string.IsNullOrEmpty(cartItemParts[3]))
                            {
                                <img src="data:image/jpeg;base64,@cartItemParts[3]" width="70%" height="70%" />
                            }
                            else
                            {
                                <p>No image available</p>
                            }

                        </td>
                        <td>@cartItemParts[1]</td>
                        <td>@cartItemParts[2]</td>
                        <td>
                            @Html.ActionLink("Delete", "DeleteCartItem", "Home", new { id = cartItemParts[0] }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
                else
                {
                    <p>Invalid cart item format</p>
                }
            }
        </tbody>
    </table>

    @Html.ActionLink("Order All", "OrderAll", "Home", null, new { @class = "btn btn-primary" })
}

@Html.ActionLink("Continue Shopping", "CustomerHome", "Home")
