@model IEnumerable<Ecommerce.EF.Product>

@{
    ViewBag.Title = "CustomerHome";
}

<h2>Customer Home</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            Product Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductDetails)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category1.CategoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td width="15%">
                @if (item.ProductImage != null && item.ProductImage.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.ProductImage)" width="70%" height="70%" />
                }
                else
                {
                    <p>No image available</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td width="25%">
                @Html.DisplayFor(modelItem => item.ProductDetails)
            </td>
            <td width="10%">
                @Html.DisplayFor(modelItem => item.ProductPrice) TK
            </td>
            <td width="10%">
                @Html.DisplayFor(modelItem => item.Quantity) Pieces
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category1.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Add to Cart", "AddToCart", new { id = item.id }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }
</table>
