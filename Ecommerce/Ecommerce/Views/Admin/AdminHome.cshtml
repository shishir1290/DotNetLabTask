@model IEnumerable<Ecommerce.EF.Order>

@{
    ViewBag.Title = "AdminHome";
    var errorMessage = TempData["ErrorMessage"] as string;
}

<h2>AdminHome</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => order.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(model => order.ProductId)
            </td>

            <td>
                @Html.DisplayFor(model => order.Status)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">
                        @errorMessage
                    </div>
                }
            </td>
            <td>
                @Html.ActionLink("Approve", "UpdateOrderStatus", new { id = order.id }, new { @class = "btn btn-success" })

            </td>
        </tr>
    }
</table>
